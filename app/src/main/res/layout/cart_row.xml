<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.25">

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/restpic"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.75"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1.25">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futura_medium"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/quantum_grey600"
                        android:fontFamily="@font/futura_medium"
                        android:text=""/>


                    <TextView
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/futura_medium"
                        android:text=""/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_weight="0.75">

                   <ImageView
                       android:id="@+id/delete"
                       android:layout_width="20dp"
                       android:layout_marginEnd="16dp"
                       android:layout_height="20dp"
                       android:visibility="gone"
                       android:alpha="0.8"/>

                    <LinearLayout
                        android:id="@+id/count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/no_bg"
                        android:layout_margin="5dp"
                        android:visibility="visible"
                        android:padding="5dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/minus"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="16dp"
                                android:layout_height="2dp"
                                android:background="@drawable/minus"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1">


                            <TextView
                                android:id="@+id/qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="1"
                                android:fontFamily="@font/futura_medium"
                                android:textColor="@color/colorPrimaryDark"
                                />

                            <TextView
                                android:id="@+id/min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="1"
                                android:visibility="gone"
                                android:fontFamily="@font/futura_medium"
                                android:textColor="@color/colorPrimaryDark"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/plus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/plus"/>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>





            <TextView
                android:id="@+id/pushid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:fontFamily="@font/futura_medium"
                android:text="Name of the product"
                android:textColor="@color/editext"
                android:textSize="14dp" />






        </LinearLayout>

        </LinearLayout>


        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
            android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/quantum_grey300"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>